<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchMapActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btnBackMap"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />


    <TextView
        android:id="@+id/tvactionbarMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/btnBackMap"
        android:fontFamily="@font/tajawal_regular"
        android:text="Manage city"
        android:textColor="@color/black"
        android:textSize="35sp" />
    <TextView
        android:id="@+id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tvactionbarMap"
        android:layout_marginTop="5dp"
        android:background="#A19B9B" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp" />


</RelativeLayout>